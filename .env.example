# Triad Model Environment Variables
# Copy this file to .env and configure for your environment

# Application Environment
TRIAD_ENV=development

# Database Configuration (Prisma)
# SQLite (Development) - Free version
DATABASE_URL="file:./data/triad.db"

# PostgreSQL (Production) - Uncomment and configure for production
# DATABASE_URL="postgresql://username:password@localhost:5432/triad_model"

# MySQL (Alternative) - Uncomment and configure if preferred
# DATABASE_URL="mysql://username:password@localhost:3306/triad_model"

# JWT Authentication (Production)
JWT_SECRET=your_jwt_secret_key_here

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Logfire Configuration
LOGFIRE_TOKEN=your_logfire_token_here

# Security Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
TRUSTED_HOSTS=localhost,your-domain.com

# Server Configuration
TRIAD_SERVER_HOST=0.0.0.0
TRIAD_SERVER_PORT=8000
TRIAD_SERVER_WORKERS=1

# Constitutional Framework
TRIAD_CONSTITUTIONAL_OVERSIGHT_ENABLED=true
TRIAD_CONSTITUTIONAL_PARLIAMENTARY_ACCOUNTABILITY=true
TRIAD_CONSTITUTIONAL_SEPARATION_OF_POWERS=true

# Agent Configuration
TRIAD_AGENTS_PLANNER_AGENT_TIMEOUT_SECONDS=120
TRIAD_AGENTS_EXECUTOR_AGENT_TIMEOUT_SECONDS=180
TRIAD_AGENTS_EVALUATOR_AGENT_TIMEOUT_SECONDS=90
TRIAD_AGENTS_OVERWATCH_AGENT_TIMEOUT_SECONDS=60

# Parliamentary Configuration
TRIAD_PARLIAMENTARY_QUESTION_PERIOD_ENABLED=true
TRIAD_PARLIAMENTARY_MOTIONS_ENABLED=true
TRIAD_PARLIAMENTARY_VOTING_ENABLED=true

# A2A Communication
TRIAD_A2A_BROKER_ENABLED=true
TRIAD_A2A_BROKER_CONSTITUTIONAL_OVERSIGHT=true

# MCP Configuration
TRIAD_MCP_CLIENT_ENABLED=true
TRIAD_MCP_CLIENT_TIMEOUT_SECONDS=30

# Monitoring
TRIAD_MONITORING_HEALTH_CHECKS_ENABLED=true
TRIAD_MONITORING_METRICS_ENABLED=true
TRIAD_MONITORING_ALERTS_ENABLED=true

# Logging
TRIAD_LOGGING_LEVEL=INFO
TRIAD_LOGGING_LOGFIRE_ENABLED=true
TRIAD_LOGGING_AUDIT_TRAIL_ENABLED=true

# Development Settings (Development Only)
TRIAD_DEVELOPMENT_DEBUG_MODE=true
TRIAD_DEVELOPMENT_AUTO_RELOAD=true
TRIAD_DEVELOPMENT_MOCK_EXTERNAL_SERVICES=true